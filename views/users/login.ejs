
<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <h1 class="col-6 offset-3 form-head">Login</h1>
    <div class="col-6 offset-3">
        <form action="/login" method="POST" class="needs-validation" novalidate>
           <div class="mb-3">
            <label form="username" class="form-label">Username</label>
            <input 
              name="username" 
              id="username" 
              type="text" 
              class="form-control" 
              required>
        </div>

        <div class="mb-3 password-input-wrapper">
            <label form="password" class="form-label">Password</label>
            <input 
              name="password" 
              id="password" 
              type="password" 
              class="form-control password-input" 
              required>
               <i class="fa-solid fa-eye password-toggle" id="eye-icon" onclick="togglePassword()"></i>

        </div>
        <button class="btn btn-success ">Login</button>
        </form>
    </div>
</div>